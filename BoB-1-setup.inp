/COM,===========================================================================
/COM,SETUP
/COM,===========================================================================

FINISH

/COM,---------------------------------------------------------------------------
/COM,RESET
/COM,---------------------------------------------------------------------------

! Get information about batch/interactive mode
*GET,is_interactive,ACTIVE,0,INT
! Do only in interactive mode to prevent deleting command line arguments
*IF,is_interactive,NE,0,THEN
	! Clear everything
	/CLEAR,NOSTART
*ENDIF

/COM,---------------------------------------------------------------------------
/COM,CONSTANTS
/COM,---------------------------------------------------------------------------

! Boolean data types
*SET,true,1
*SET,false,0

! Meshing methods
*SET,free_mesh,0
*SET,mapped_mesh,1

! Meshing methods
*SET,hexahedral_mesh,0
*SET,tetrahedral_mesh,1

! Define the number Pi
*SET,PI,3.141592653589793

/COM,---------------------------------------------------------------------------
/COM,UNITS
/COM,---------------------------------------------------------------------------

! Length
*SET,meter     ,1*1000
*SET,millimeter,1
*SET,micrometer,1/1000
*SET,nanometer ,1/1000/1000

! Force
*SET,newton,1

! Pressure
*SET,gigapascal,1*1000
*SET,megapascal,1

/COM,---------------------------------------------------------------------------
/COM,TOLERANCE
/COM,---------------------------------------------------------------------------

! Initial tolerance for boolean operations
BTOL,nanometer/10

! Initial tolerance for selections
SELTOL,nanometer/10

/COM,---------------------------------------------------------------------------
/COM,VIEW
/COM,---------------------------------------------------------------------------

! Rotate view
/VIEW,1,0,0,+1
/ANG,1,0

! Do not scale displacements
/DSCALE,ALL,1

/COM,---------------------------------------------------------------------------
/COM,COLOR MAP
/COM,---------------------------------------------------------------------------

! Load a symmetric colormap
/CMAP,'blue-gray-red','cmap'

/COM,---------------------------------------------------------------------------
/COM,ABBREVIATIONS
/COM,---------------------------------------------------------------------------

*ABBR,'RESTART',/INPUT,BoB-00,inp
*ABBR,'SETUP',/INPUT,BoB-1-setup,inp
*ABBR,'CONFIG',/INPUT,BoB-2-configuration-Pasterk,inp
*ABBR,'MATERIAL',/INPUT,BoB-3-materials,inp
*ABBR,'GEOMETRY',/INPUT,BoB-4-geometry,inp
*ABBR,'MESH',/INPUT,BoB-5-mesh,inp
*ABBR,'BC',/INPUT,BoB-6-BC,inp
*ABBR,'STRESS',/INPUT,BoB-7-stress,inp
*ABBR,'EXPORTSTRESS',/INPUT,BoB-7-stress-export,inp
*ABBR,'ENERGY',/INPUT,BoB-9-energy,inp
*ABBR,'EXPORTENERGY',/INPUT,ball-on-ball-8-energy-export,inp
